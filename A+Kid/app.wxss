/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.sub-button{
   margin-top: 80rpx;
   background: -webkit-linear-gradient(left, rgb(163,221,103) , rgb(148, 213, 82));
   width: 600rpx;
   height: 100rpx;
   border-radius: 50rpx;
   box-shadow: 0 10px 5px rgb(214, 235, 192);
   border: none;
   color: white;
}
.input-placeholder{
  color: rgb(203, 203, 203)
}
.fade-in {
    animation: fadeIn .3s forwards;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    -webkit-transform: translate3d(0, 100%, 0);
    transform: translate3d(0, 100%, 0);
  }

  to {
    opacity: 1;
    -webkit-transform: none;
    transform: none;
  }
}
.message {
    position: fixed;
    top: 80%;
    left: 50%;
    width: 400rpx;
    height: 80rpx;
    margin-left: -200rpx;
    background-color: rgba(0, 0, 0, .75);
    border-radius: 20px;
    text-align: center;
    line-height: 80rpx;
    color: #fff;
    opacity: 0;
}