/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.sub-button{
   margin-top: 80rpx;
   background: -webkit-linear-gradient(left, rgb(163,221,103) , rgb(148, 213, 82));
   width: 600rpx;
   height: 100rpx;
   border-radius: 50rpx;
   box-shadow: 0 10px 5px rgb(214, 235, 192);
   border: none;
   color: white;
}
.input-placeholder{
  color: rgb(203, 203, 203)
}
.fade-in {
    animation: fadeIn .3s forwards;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    -webkit-transform: translate3d(0, 100%, 0);
    transform: translate3d(0, 100%, 0);
  }

  to {
    opacity: 1;
    -webkit-transform: none;
    transform: none;
  }
}
.message {
    position: fixed;
    top: 80%;
    left: 50%;
    width: 400rpx;
    height: 80rpx;
    margin-left: -200rpx;
    background-color: rgba(0, 0, 0, .75);
    border-radius: 20px;
    text-align: center;
    line-height: 80rpx;
    color: #fff;
    opacity: 0;
}
.pass-tip{
  font-size: 30rpx;
  margin-top: 10rpx;
  text-align: left;
  color: red;
}
.form-item{
  border-bottom: 1rpx solid rgb(229,229,229);
  padding: 25rpx 0;
  letter-spacing: 2rpx;
}
.text-center{
  text-align: center;
}
.text-black{
  color: rgb(51, 51, 51);
}
.text-gray{
  color: rgb(102, 102, 102);
}
.text-green{
  color:rgb(118, 168, 66);
}
.text-lightgray{
  color:rgb(198, 198, 198);
}
.back-green{
  background: rgb(163,221,103);
}
.icon-gray{
  color: rgb(153, 153, 153);
}