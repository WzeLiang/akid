/* pages/education/activity/activity.wxss */
.classmsg{
  padding-bottom: 50rpx;
}
.tabnav{
  display: flex;
  border-top:1rpx solid rgb(229,229,229); 
  border-bottom:1rpx solid rgb(229,229,229); 
}
.tabnav .tab-item{
  font-size: 33rpx;
  flex: auto;
  text-align: center;
  line-height: 50rpx;
  padding: 20rpx 0;
  border-right: 1rpx solid rgb(229,229,229);
}
.tabnav .tab-item:last-child{
  border-right: none;
}
.tab-content{
  padding: 0 30rpx;
  margin: 20rpx 0;
}
.tab-content .content-item{
  border-bottom: 1rpx solid rgb(229,229,229);
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
  
}
.tab-content .content-item .item-msg{
  line-height: 55rpx;
}

.tab-content .content-item .item-msg .msg-head{
  display: flex;
  justify-content: space-between;
} 
.item-msg .msg-title{
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpxï¼›
}
.active{ 
  border-bottom: 4rpx solid rgb(119, 195, 41);
  color: rgb(119, 195, 41);
}

.msg-list{
  padding:0 0 30rpx 0;
}

.item-title{
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}
.item-title .title-class{
  font-size: 38rpx;
}
.item-title .title-class text{
  margin-left: 10rpx;
  font-size: 32rpx;
}
.item-title .title-time{
  font-size: 30rpx;
}
.item-info{
  font-size: 32rpx;
  letter-spacing:.5rpx;
  line-height:50rpx;
}