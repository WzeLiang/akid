/* pages/education/home/home.wxss */
.swiper-item image{
  width: 100%;
}
.pro-box{
  display: flex;
  flex-flow: wrap;
  border-bottom: 1px solid rgb(229, 229, 229);
}
.pro-item{
  width: 187.5rpx;
  height: 200rpx;
  box-sizing: border-box;
  /* border: solid 1rpx red; */
  text-align: center;
  vertical-align: middle;
  font-size: 28rpx;
  color: rgb(102, 102, 102);
}
.pro-item image{
  margin-top: 30rpx;
  width: 80rpx;
  height: 80rpx;
}
.class-msg{
 padding: 30rpx 20rpx;
}
.class-msg .msg-head{
  line-height: 45rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
}
.title-h3{
  font-size: 40rpx;
  font-weight: 600;
}
.more{
  font-size: 30rpx;
  color: rgb(102, 102, 102);
}
.msg-content{
  
}
.msg-content .content-item {
  border-bottom: 1rpx solid rgb(229, 229, 229);
  padding: 20rpx 0;
}
.msg-content .content-item .item-title{
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.msg-content .content-item .item-title .title-classnumb{
    font-size: 37rpx;
}
.msg-content .content-item .item-title .title-date{
 font-size: 30rpx;
 vertical-align: text-bottom;
 line-height: 50rpx;
}
.msg-content .content-item .item-info{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
   font-size: 32rpx;
  letter-spacing:.5rpx;
  line-height:50rpx;
}
.unread{
  position: relative;
}
.unread:after{
  width: 20rpx;
  height: 20rpx;
  border-radius: 10rpx;
  background: red;
  content: "";
  position: absolute;
  left: 100%;
  top: 0
}