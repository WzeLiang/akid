/* pages/education/glory/glory.wxss */
.select_box{
  text-align: center;
  background: #fff;
  width: 100%;
  margin: 30rpx auto 0;
  position: relative;
}
.select{
  box-sizing: border-box;
  /* width: 100%; */
  height: 70rpx;
  border:none;
  border-radius: 8rpx;
 
  align-items: center;
  padding: 0 20rpx;
  background: rgb(239, 249, 228);
}
.select_text{
  font-size: 30rpx;
 
}
.select_img{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-left: 15rpx;
  transition:transform 0.3s;
}
.select_img_rotate{
  transform:rotate(180deg); 
}
.option_box{
  width: 450rpx;
  text-align: center;
  position: absolute;
  top: 70rpx;
  box-sizing: border-box;
  height:300rpx;
  left: 130rpx;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
  box-shadow:0px 0px 20px #7D7D7D;
  border-radius:10rpx; 
}
.option_box::-webkit-scrollbar {
        display: none;
    }
.option{
  display: block;
  line-height: 60rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 12rpx;
}
page{
  background: rgb(239, 249, 228);
}
